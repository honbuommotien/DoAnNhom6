@model IEnumerable<DoAnNhom6.Models.Giohang>

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DatHang</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iSoluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dThanhtien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ten)
            </td>
            <td><img src="@item.hinh" width="200" /></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @id = item.id }))
            {

                <td>@String.Format("{0:0,0}", item.gia) VNĐ</td>



                <td> @Html.DisplayFor(mode1Ttem => item.iSoluong)</td>
                <td> @Html.DisplayFor(mode1Ttem => item.dThanhtien)</td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="3">Số lượng đồng hồ: @ViewBag.Tongsoluong</td>
        <td colspan="4">Số loại đồng hồ: @ViewBag.Tongsoluongsanpham</td>
        <td colspan="5">
            Tổng tiền:
            @String.Format("{0:0:0}", @ViewBag.Tongtien) VNĐ
        </td>
    </tr>
    }

    <tr style="font-weight: bold; text-align: right">
        <td colspan="6">@Html.ActionLink("Trở về giỏ hàng", "Giohang", "GioHang")</td>

    </tr>
</table>


