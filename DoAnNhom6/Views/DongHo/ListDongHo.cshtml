@model IEnumerable<DoAnNhom6.Models.DongHo>
@{
    ViewBag.Title = "ListSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>THÔNG TIN ĐỒNG HỒ</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã loại </th>
        <th> Tên</th>
        <th> Mô tả</th>
        <th> Hãng</th>
        <th> Giá bán</th>
        <th> Hình </th>
        <th> Số lượng tồn</th>
        <th> Ngày cập nhật </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@Html.DisplayFor(modelItem => item.id)</td>
    <td>@Html.DisplayFor(modelItem => item.ten)</td>
    <td>@Html.DisplayFor(modelItem => item.mota)</td>
    <td>@Html.DisplayFor(modelItem => item.hang)</td>
    <td>@Html.DisplayFor(modelItem => item.gia)</td>
    <td><img src="@item.hinh" width="300px" alt="hinh thumbnail" /></td>

    <td>@Html.DisplayFor(modelItem => item.soluongton)</td>
    <td>@Html.DisplayFor(modelItem => item.ngaycapnhat)</td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Detail", "Detail", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id })
    </td>
</tr>
    }
</table>